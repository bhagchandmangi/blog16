<%= form_with(model: [ @article, @article.messages.build], local: true) do |f| %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
  
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
  
    <p>
      <%= f.submit %>
    </p>
<% end %>